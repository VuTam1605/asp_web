@model TheLoai
<div class="container">
    <h3>Thêm thể loại</h3>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Tên thể loại</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="DateCreated" class="control-label">Ngày tạo</label>
            <input asp-for="DateCreated" type="date" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>