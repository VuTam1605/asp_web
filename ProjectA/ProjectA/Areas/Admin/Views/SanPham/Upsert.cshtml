@model SanPham
<div class="container">
    <h3>Thêm/ chiỉnh sửa sản phẩm</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Tên sản phẩm</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descpription">Mô tả</label>
            <input asp-for="Descpription" type="date" class="form-control" />
            <span asp-validation-for="Descpription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="price">Giá bán</label>
            <input asp-for="price" type="date" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Hình ảnh</label>
            <input asp-for="ImageUrl" type="date" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TheLoaiId">Thể loại</label>
            <select asp-for="TheLoaiId" asp-item></select>
        </div>
        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}