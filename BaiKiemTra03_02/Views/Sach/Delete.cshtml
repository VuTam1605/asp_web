@model Sach

<div class="container">
    <h3>Xóa sách</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="DeleteConfirm">
        <input type="hidden" asp-for="MaSach" />
        <div class="form-group">
            <label asp-for="TieuDeSach">Tiêu đề sách</label>
            <input asp-for="TieuDeSach" type="text" class="form-control" readonly />
            <span asp-validation-for="TieuDeSach" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NamXuatBan">Năm xuất bản</label>
            <input asp-for="NamXuatBan" type="number" class="form-control" readonly />
            <span asp-validation-for="NamXuatBan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaTacGia">Mã tác giả</label>
            <input asp-for="MaTacGia" type="number" class="form-control" readonly />
            <span asp-validation-for="MaTacGia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TheLoai">Thể loại</label>
            <input asp-for="TheLoai" type="text" class="form-control" readonly />
            <span asp-validation-for="TheLoai" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
